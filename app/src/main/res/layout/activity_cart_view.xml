<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.mak.pos.CartViewActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appColor"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvLocalCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Local Cart"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_text_size"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>
        <TextView
            android:id="@+id/tvSevrverCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Saved Kot"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_text_size"/>
    </LinearLayout>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/list_selector_background"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/menu_title"
        app:cardElevation="2dp"
        app:cardCornerRadius="0dp"

        app:cardPreventCornerOverlap="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight=".35"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:inputType="textCapWords"

                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:text="Name"
                android:textStyle="bold"/>

            <TextView

                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:text="Qty"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"/>
            <TextView

                android:layout_width="0dp"
                android:layout_weight=".18"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="right"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:text="SGST"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".18"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:text="CGST"
                android:textStyle="bold"/>
            <TextView

                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="right"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:text="Price"
                android:textStyle="bold"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
android:layout_weight="1"
            android:id="@+id/rvCart">
        </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/menu_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"


                android:text="NET"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="SGST"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="CGST"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="SURCHARGE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="DISCOUNT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="ROUND OFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"


                android:text="BILL AMOUNT"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text=""/>
            <TextView
                android:id="@+id/tvTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="0"/>
            <TextView
                android:id="@+id/tvAddTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="0"/>
            <TextView
                android:id="@+id/tvSurCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="0"/>
            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="0"/>
            <TextView
                android:id="@+id/tvRoundOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="0"/>
            <TextView
                android:id="@+id/tvNet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="22sp"

                android:textStyle="bold"


                android:text=""/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appColor"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Kot"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_text_size"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>
        <TextView
            android:id="@+id/tvGBill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Generate Bill"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/btn_text_size"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>
        <TextView
            android:id="@+id/tvSettlement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settlement"

            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/btn_text_size"/>
    </LinearLayout>

</LinearLayout>
